{% extends 'base.html.twig' %}

{% block title %}Hello PostingController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <form>
    	<div class="form-group">
    		<label>Title</label><br/>
    		<input type="text" class="form-controll" id="postTitle">
    	</div>
    	<div class="form-group">
    		<label>Text</label><br/>
    		<textarea class="form-controll" id="postText"></textarea>
    	</div>
    	<button type="submit" id="postArticle">Submit</button>
    </form>
        <p id="message_par"><br/></p>
</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/posting.js') }}"></script>
{% endblock %}