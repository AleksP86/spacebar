<!doctype html>
<html lang="en">
    <head>
        <title>{% block title %}Welcome to the SpaceBar{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-bg mb-5">
            <a style="margin-left: 75px;" class="navbar-brand space-brand" href="{{ path('welcome')}}">The Space Bar</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            	<span class="navbar-toggler-icon"></span>
        	</button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav mr-auto">
                    {% if local_asteroids is defined %}
                    <li class="nav-item">
                    	<a style="color: #fff;" class="nav-link" href="{{ path('welcome') }}">Local Asteroids</a>
                    </li>
                    {% endif %}
                </ul>
                <ul class="navbar-nav ml-auto">
                    {% if logged_user is defined %}
                        {% if logged_user != null %}
                        <li class="nav-item dropdown" style="margin-right: 75px;">
                            <a class="nav-link dropdown-toggle" href="" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                {% if user_avatar != null and user_avatar %}
                    			    <img class="nav-profile-img rounded-circle" src="{{ user_avatar }}">
                                {% else %}
                                    <img class="nav-profile-img rounded-circle" src="{{ asset('images/astronaut-profile.png') }}">
                                {% endif %}
                    		</a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="{{ path('profile') }}">Profile</a>
                                <a class="dropdown-item" href="{{ path('posts') }}">Create Post</a>
                                <a class="dropdown-item" href="{{ path('logout') }}">Logout</a>
                            </div>
                        </li>
                        {% else %}
                        <li class="nav-item" style="margin-right: 75px;">
                            <a class="nav-link" href="{{ path('login') }}">
                                <img class="nav-profile-img rounded-circle" src="{{ asset('images/profile_empty.jpg') }}">
                            </a>
                        </li>
                        {% endif %}
                    {% else %}
                    <li class="nav-item" style="margin-right: 75px;">
                        <a class="nav-link" href="{{ path('login') }}">
                            <img class="nav-profile-img rounded-circle" src="{{ asset('images/profile_empty.jpg') }}">
                        </a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}
        	<script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
        	<script src="{{ asset('js/bootstrap.js') }}"></script>
        	<script>
        		$('.dropdown-toogle').dropdown();
        	</script>
        {% endblock %}
    </body>
    <fotter>
        <p>Footer section</p>
    </fotter>
</html>